# Flask / app settings
FLASK_ENV=development
FLASK_SECRET_KEY=change-me

# Paths
DATABASE_PATH=instance/app.db
PAPERS_DATA_DIR=CodeArXiv-data

# Auth
NO_AUTH_MODE=true
DEFAULT_USER_USERNAME=guest
DEFAULT_USER_PASSWORD=guest

# Codex processing (run_daily.py / run_papers_cool.py / codex_fill_zh.py)
CODEX_MODEL=
CODEX_REASONING_EFFORT=low
CODEX_REASONING_SUMMARY=concise
CODEX_BATCH_SIZE=5
CODEX_TIMEOUT=300
CODEX_SLEEP=0.2
CODEX_OVERWRITE=false
